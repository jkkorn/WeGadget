<%= render "wegadget/header" %>


<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form-horizontal well" }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

    <fieldset>
      <legend>Change your password</legend>
      <div class="control-group">
        <div class="controls">
          <% if resource.errors.any? %>
              <% resource.errors.full_messages.each do |msg| %>
                  <span class="label label-important"><%= msg %></span>
              <% end %>
          <% end %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="input01"><%= f.label :password, "New password" %></label>
        <div class="controls">
          <%= f.password_field :password, :class => "input-xlarge", :id => "input01" %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="input02"><%= f.label :password_confirmation, "Confirm new password" %></label>
        <div class="controls">
          <%= f.password_field :password_confirmation, :class => "input-xlarge", :id => "input02" %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.submit "Change my password", :class => "btn btn-primary" %>
        <%= render "devise/shared/links" %>
      </div>
    </fieldset>


<% end %>