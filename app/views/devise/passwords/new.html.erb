<%= render "wegadget/header" %>


<div class="span4" style="text-align:center; margin-top: 48px; margin-left: 458px;">
  <div class="well">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-horizontal" }) do |f| %>
        <h2>Forgot Password?</h2>
        <input type="hidden" name="login" value="1">

        <div class="control-group">
          <div class="controls" style="margin-left:0;">
            <div class="input-prepend">
            <span class="add-on">
                <i class="icon-user"></i>
            </span>
              <%= f.email_field :email, :id => "email", :placeholder => "Email", :size => 25 %>
            </div>
          </div>
        </div>
        <div class="control-group">
          <%= f.submit "Send me instructions", :class => "btn btn-primary"  %>
          <%= link_to_function "Back", "history.back()", :class => "btn" %>
        </div>
    <% end %>
  </div>
</div>