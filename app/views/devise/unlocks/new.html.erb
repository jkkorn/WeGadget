<%= render "wegadget/header" %>

<%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post, :class => "form-horizontal well" }) do |f| %>

<fieldset>
  <legend>Resend unlock instructions</legend>
  <div class="control-group">
    <div class="controls">
      <% if resource.errors.any? %>
          <% resource.errors.full_messages.each do |msg| %>
              <span class="label label-important"><%= msg %></span>
          <% end %>
      <% end %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="input01"><%= f.label :email %></label>
    <div class="controls">
      <%= f.email_field :email, :class => "input-xlarge", :id => "input01" %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Resend unlock instructions", :class => "btn btn-primary" %>
    <%= render "devise/shared/links" %>
  </div>
</fieldset>

<% end %>