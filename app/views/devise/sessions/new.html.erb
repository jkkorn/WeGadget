<%= render "wegadget/header" %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal well" }) do |f| %>

    <fieldset>
      <legend>Sign in</legend>
      <div class="control-group">
        <label class="control-label" for="input01"><%= f.label :email %></label>
        <div class="controls">
          <%= f.email_field :email, :class => "input-xlarge", :id => "input01" %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="input02"><%= f.label :password %></label>
        <div class="controls">
          <%= f.password_field :password, :class => "input-xlarge", :id => "input02" %>
        </div>
      </div>
      <% if devise_mapping.rememberable? -%>
          <div class="control-group">
            <div class="controls">
              <label class="checkbox">
                <%= f.check_box :remember_me, :id => "optionsCheckbox" %> <%= f.label :remember_me %>
              </label>
            </div>
          </div>
      <% end -%>
      <div class="form-actions">
        <%= f.submit "Sign in", :class => "btn btn-primary"  %>
        <%= render "devise/shared/links" %>
      </div>
    </fieldset>

<% end %>