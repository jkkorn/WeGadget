<%= render "wegadget/header" %>

<div class="span4" style="text-align:center; margin-top: 48px; margin-left: 458px;">
  <div class="well">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal" }) do |f| %>
      <h2>Login</h2>
      <input type="hidden" name="login" value="1">

      <div class="control-group">
        <div class="controls" style="margin-left:0;">
          <div class="input-prepend">
            <span class="add-on">
                <i class="icon-user"></i>
            </span>
                <%= f.email_field :email, :id => "email", :placeholder => "Email", :size => 25 %>
          </div>
        </div>
      </div>
      <div class="control-group">
        <div class="controls" style="margin-left:0;">
          <div class="input-prepend">
            <span class="add-on">
                <i class="icon-lock"></i>
            </span>
                <%= f.password_field :password, :id => "password", :placeholder => "Password", :size => 25 %>
          </div>
        </div>
      </div>
      <div class="control-group">
            <%= f.submit "Log in", :class => "btn btn-primary"  %>
            <%= link_to "Forgot?", new_password_path(resource_name), :class => "btn btn-primary" %>
      </div>
    <% end %>
    <hr>
    <h2>Or register</h2>
    <%= link_to "Registration", new_registration_path(resource_name) %>
  </div>
</div>