<%= render "wegadget/header" %>

<%= form_for(:tutorial, :url => {:action => 'new'}) do |t| %>
    <%= t.submit "Criar um novo Tutorial", :class => "btn btn-primary" %>
<% end %>

<table class="table table-striped">
  <thead>
      <tr>
        <th colspan="3">Tutoriais:</th>
      </tr>
  </thead>
  <tbody>
    <% @tutorials.each do |t| %>
      <tr>
        <td><%= t.title %></td>
        <td><%= t.subtitle %></td>
        <td><%= t.description %></td>
        <td><%= t.category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>