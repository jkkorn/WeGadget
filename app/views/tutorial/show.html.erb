<%= render "wegadget/header" %>

<div class="vote">
    <%= link_to image_tag('arrow_up_32.png'), {:controller => "tutorial", :action => "up_vote", :id => @tutorial.id, :category_id => @tutorial.category.id} %><br/>
    <span class="label label-inverse" style="color:white; padding: 11px;"><%= @tutorial.up_votes %></span><br/>
    <%= link_to image_tag('arrow_down_32.png'), {:controller => "tutorial", :action => "down_vote", :id => @tutorial.id, :category_id => @tutorial.category.id} %>
</div>

<div class="tutorial">

        <h2 class="tutorial-title">
            <%= @tutorial.title %>
        </h2>

        <span class="tutorial-subtitle">
            <%= @tutorial.subtitle %>
        </span>

        <div class="tutorial-description">
            <%= raw @tutorial.description %><!-- esse raw serve pra imprimir texto html -->
        </div>

  </div>

